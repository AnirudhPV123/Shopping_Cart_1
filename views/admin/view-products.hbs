<section>
  <div class="container">
    <div class="row mt-4">

      {{#if masterAdmin}}
            <a href="/admin/create-new-admin" class="btn btn-success " style="margin: 10px;">Create new Admin</a>
{{/if}}
      <a href="/admin/add-product" class="btn btn-success ml-auto" style="margin: 10px;">Add Product</a>
    </div>
    <table class="table mt-5" id="productsTable">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Category</th>
          <th scope="col">Description</th>
          <th>Image</th>
          <th>Options</th>




        </tr>
      </thead>
      <tbody>
                  {{#each products}}
        <tr>
          <td>{{this.Name}}</td>
          <td>{{this.Category}}</td>
          <td>{{this.Description}}</td>
          <td><img style="height:50px; width: auto;" src="/product-images/{{this._id}}.jpg" alt=""></td>
          <td>
            <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
          <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
              onclick="return confirm('Are you want to delete {{this.Name}} ?')">Delete</a>
              </td>

        </tr>
        {{/each}}

      </tbody>
    </table>
  </div>
</section>

